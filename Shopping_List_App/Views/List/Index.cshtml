@model IEnumerable<Shopping_List_App.Models.List> 

@{
    ViewData["Title"] = "Index";
}

<ul>
    @foreach (List list in @Model)
    {
        <li>
            @Html.ActionLink(list.Title, "Index", "ListItem", new {  listId = list.Id }, null)
        </li>
    }
</ul>

<hr />
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th><a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Einkaufsliste </a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListItems);
            </td>
            <td>
                <a href="/ListItem"><i class="fa fa-marker fa-lg"></i></a>foreach
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Wollen Sie diese Liste wirklich löschen?')" ><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
